<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- 登陆 -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.books.servlet.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 退出 -->
    <servlet>
        <servlet-name>exitServlet</servlet-name>
        <servlet-class>com.books.servlet.exitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exitServlet</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>

    <!-- 添加图书信息 -->
    <servlet>
        <servlet-name>addBookServlet</servlet-name>
        <servlet-class>com.books.servlet.addBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBookServlet</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <!-- 添加读者信息 -->
    <servlet>
        <servlet-name>addReaderServlet</servlet-name>
        <servlet-class>com.books.servlet.addReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addReaderServlet</servlet-name>
        <url-pattern>/addReader</url-pattern>
    </servlet-mapping>

    <!-- 添加读者类别信息 -->
    <servlet>
        <servlet-name>addReaderTypeServlet</servlet-name>
        <servlet-class>com.books.servlet.addReaderTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addReaderTypeServlet</servlet-name>
        <url-pattern>/addReaderType</url-pattern>
    </servlet-mapping>

    <!-- 显示图书信息 -->
    <servlet>
        <servlet-name>displayBookServlet</servlet-name>
        <servlet-class>com.books.servlet.displayBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayBookServlet</servlet-name>
        <url-pattern>/displayBook</url-pattern>
    </servlet-mapping>

    <!-- 显示读者信息 -->
    <servlet>
        <servlet-name>displayReaderServlet</servlet-name>
        <servlet-class>com.books.servlet.displayReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayReaderServlet</servlet-name>
        <url-pattern>/displayReader</url-pattern>
    </servlet-mapping>

    <!-- 显示读者类别信息 -->
    <servlet>
        <servlet-name>displayReaderTypeServlet</servlet-name>
        <servlet-class>com.books.servlet.displayReaderTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayReaderTypeServlet</servlet-name>
        <url-pattern>/displayReaderType</url-pattern>
    </servlet-mapping>

    <!-- 修改图书信息 -->
    <servlet>
        <servlet-name>modifyBookServlet</servlet-name>
        <servlet-class>com.books.servlet.modifyBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyBookServlet</servlet-name>
        <url-pattern>/modifyBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modifyOneBookServlet</servlet-name>
        <servlet-class>com.books.servlet.modifyOneBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyOneBookServlet</servlet-name>
        <url-pattern>/modifyOneBook</url-pattern>
    </servlet-mapping>

    <!-- 修改读者信息 -->
    <servlet>
        <servlet-name>modifyReaderServlet</servlet-name>
        <servlet-class>com.books.servlet.modifyReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyReaderServlet</servlet-name>
        <url-pattern>/modifyReader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modifyOneReaderServlet</servlet-name>
        <servlet-class>com.books.servlet.modifyOneReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyOneReaderServlet</servlet-name>
        <url-pattern>/modifyOneReader</url-pattern>
    </servlet-mapping>

    <!-- 修改读者类别信息 -->
    <servlet>
        <servlet-name>modifyReaderTypeServlet</servlet-name>
        <servlet-class>com.books.servlet.modifyReaderTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyReaderTypeServlet</servlet-name>
        <url-pattern>/modifyReaderType</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modifyOneReaderTypeServlet</servlet-name>
        <servlet-class>com.books.servlet.modifyOneReaderTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyOneReaderTypeServlet</servlet-name>
        <url-pattern>/modifyOneReaderType</url-pattern>
    </servlet-mapping>

    <!-- 删除图书信息 -->
    <servlet>
        <servlet-name>deleteBookServlet</servlet-name>
        <servlet-class>com.books.servlet.deleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteBookServlet</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>

    <!-- 删除读者信息 -->
    <servlet>
        <servlet-name>deleteReaderServlet</servlet-name>
        <servlet-class>com.books.servlet.deleteReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteReaderServlet</servlet-name>
        <url-pattern>/deleteReader</url-pattern>
    </servlet-mapping>

    <!-- 删除读者类型 -->
    <servlet>
        <servlet-name>deleteReaderTypeServlet</servlet-name>
        <servlet-class>com.books.servlet.deleteReaderTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteReaderTypeServlet</servlet-name>
        <url-pattern>/deleteReaderType</url-pattern>
    </servlet-mapping>
</web-app>